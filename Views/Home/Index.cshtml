@{
    ViewData["Title"] = "Index";
}

<div class="index">
    <form method="post" action='@Url.Action("LogIn", "Account")'>
        @if (ViewBag.mensaje != null)
        {
            <h2>@ViewBag.mensaje</h2>
        }
        <input type="text" name="nombre" placeholder="Nombre de usuario" autocomplete="off"><br>
        <input type="password" name="passwordIntentada" placeholder="contraseña"><br>
        <button type="submit">Iniciar Sesión</button><br>
        <a href='@Url.Action("Olvidepassword", "Account")'>Olvidé mi contraseña</a><br>
        <a href='@Url.Action("SignIn", "Account")'>No tengo una cuenta creada</a>
    </form>
</div>